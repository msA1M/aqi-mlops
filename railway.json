{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway"
  },
  "deploy": {
    "startCommand": "sh -c \"uvicorn api.main:app --host 0.0.0.0 --port 8000 & streamlit run ui/app.py --server.port=\\$PORT --server.address=0.0.0.0\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

